{
  "name": "@resolvai/shared-schemas",
  "version": "0.1.0",
  "description": "Shared schemas, prompt configurations, and type definitions for ResolvAI projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./db-schema": {
      "types": "./dist/db-schema/index.d.ts",
      "default": "./dist/db-schema/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "default": "./dist/config/index.js"
    },
    "./shared-types": {
      "types": "./dist/shared-types/index.d.ts",
      "default": "./dist/shared-types/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepack": "pnpm build",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "schemas",
    "prompts",
    "database",
    "types",
    "shared",
    "typescript",
    "drizzle"
  ],
  "license": "MIT",
  "peerDependencies": {
    "drizzle-orm": "^0.44.7"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "drizzle-kit": "^0.31.7",
    "typescript": "^5.0.0"
  }
}
