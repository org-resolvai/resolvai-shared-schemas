{
  "name": "@resolvai/shared-schemas",
  "type": "module",
  "version": "0.1.0",
  "description": "Shared schemas, prompt configurations, and type definitions for ResolvAI projects",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./agent": {
      "types": "./src/agent/index.ts",
      "default": "./src/agent/index.ts"
    },
    "./shared-types": {
      "types": "./src/shared-types/index.ts",
      "default": "./src/shared-types/index.ts"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "eslint --ignore-pattern=dist && tsc --noEmit",
    "lint:fix": "eslint --ignore-pattern=dist --fix && tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,html,yml,yaml,scss}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,html,yml,yaml,scss}\""
  },
  "keywords": [
    "schemas",
    "prompts",
    "database",
    "types",
    "shared",
    "typescript",
    "drizzle"
  ],
  "license": "MIT",
  "peerDependencies": {
    "drizzle-orm": "^0.44.7",
    "ai": "^5.0.93"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.41",
    "neostandard": "^0.12.2",
    "zod": "^4.1.12"
  }
}
